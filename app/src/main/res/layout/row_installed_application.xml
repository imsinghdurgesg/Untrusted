<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/four_dim"
    card_view:cardElevation="@dimen/four_dim"
    card_view:cardMaxElevation="@dimen/three_dim"
    card_view:contentPadding="@dimen/five_dim"
    android:layout_margin="@dimen/five_dim"
    >
    <RelativeLayout
        android:id="@+id/app_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/card_imgapp_width_dim"
            android:layout_height="@dimen/card_imgapp_width_dim"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/app_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/ten_dim"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_toEndOf="@id/iv_icon"
            android:fontFamily="sans-serif-condensed"
            />
        <TextView
            android:id="@+id/app_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#848484"
            android:layout_marginLeft="@dimen/ten_dim"
            android:layout_below="@id/app_label"
            android:textSize="16sp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_toEndOf="@id/iv_icon"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <CheckBox
            android:id="@+id/cb_blocked_app"
            android:layout_width="wrap_content"
            android:theme="@style/RedCheck"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>