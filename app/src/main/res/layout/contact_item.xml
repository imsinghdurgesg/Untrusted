<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/four_dim"
    card_view:cardElevation="@dimen/four_dim"
    card_view:cardMaxElevation="@dimen/three_dim"
    card_view:contentPadding="@dimen/five_dim"
    android:layout_margin="@dimen/five_dim"
    android:background="@color/cardback"
    >
     <RelativeLayout
    android:id="@+id/cfull_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
         <RelativeLayout
             android:id="@+id/name_view"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <ImageView
                 android:id="@+id/contact_letter"
                 android:layout_width="@dimen/medium_small_50"
                 android:layout_height="@dimen/medium_small_50"
                 android:layout_marginLeft="@dimen/medium_small_5" />
         </RelativeLayout>
  <LinearLayout
    android:id="@+id/linear"
    android:layout_width="@dimen/card_linear1_width_dim"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/name_view"
    android:layout_marginLeft="@dimen/ten_dim">


    <TextView
        android:layout_width="@dimen/card_tvname_width_dim"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        android:text="namefi"
        android:textAppearance="?android:textAppearanceLarge"
        />
    <TextView
        android:layout_width="@dimen/card_tvphone_width_dim"
        android:layout_height="match_parent"
        android:id="@+id/txt_phone"
        android:text="phone"
        android:layout_marginTop="@dimen/three_dim"
        android:textAppearance="?android:textAppearanceLarge"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_alignEnd="@+id/linear"
      android:layout_marginTop="@dimen/ten_dim"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
  <CheckBox
      android:id="@+id/checkBoxBlocked"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       />
         </LinearLayout>
  </RelativeLayout>
  </android.support.v7.widget.CardView>
