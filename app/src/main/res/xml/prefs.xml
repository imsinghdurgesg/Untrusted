<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <singh.durgesh.com.applocker.activity.MyPreferenceCategory android:title="Set Lock Pattern">
        <SwitchPreference
            android:defaultValue="false"
            android:key="SwitchLock"
            android:summary="Set App Lock Phone/App"
            android:title="App Lock Pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </singh.durgesh.com.applocker.activity.MyPreferenceCategory>

    <singh.durgesh.com.applocker.activity.MyPreferenceCategory android:title="Change Theme">
        <SwitchPreference
            android:defaultValue="true"
            android:key="SwitchTheme"
            android:summary="Set App Theme"
            android:title="Change Theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </singh.durgesh.com.applocker.activity.MyPreferenceCategory>

    <singh.durgesh.com.applocker.activity.MyPreferenceCategory android:title="Security">
        <SwitchPreference
            android:defaultValue="false"
            android:key="SwitchSecurity"
            android:summary="Administrative permission"
            android:title="Make App Unistallable without Security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </singh.durgesh.com.applocker.activity.MyPreferenceCategory>
</PreferenceScreen>

